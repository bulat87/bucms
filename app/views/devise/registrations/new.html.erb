<h3>Регистрация нового пользователя</h3>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <div class="form-group"><%= f.label "Псевдоним" %><br />
  <%= f.text_field :name, :autofocus => true, class: "form-control" %></div>

  <div class="form-group"><%= f.label "Адерс электронно почты" %><br />
  <%= f.email_field :email, class: "form-control" %></div>

  <div class="form-group"><%= f.label "Пароль" %><br />
  <%= f.password_field :password, class: "form-control" %></div>

  <div class="form-group"><%= f.label "Повторите пароль" %><br />
  <%= f.password_field :password_confirmation, class: "form-control" %></div>
  <div ><%= f.submit "Регистрация", class: "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
