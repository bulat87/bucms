<h3>Редактирование учетной записи</h3>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>

  <div class="form-group"><%= f.label "Псевдоним" %><br />
  <%= f.text_field :name, :autofocus => true, class: "form-control" %></div>

  <div class="form-group"><%= f.label "Адерс электронно почты" %><br />
  <%= f.email_field :email, class: "form-control" %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group"><%= f.label "Новый пароль" %> <i>(оставьте пустым, если не хотите его менять)</i><br />
  <%= f.password_field :password, :autocomplete => "off", class: "form-control" %></div>

  <div class="form-group"><%= f.label "Подтвердите пароль" %><br />
  <%= f.password_field :password_confirmation, class: "form-control" %></div>

  <div class="form-group"><%= f.label "Текущий пароль" %> <i>(введите пароль для подтверждения изменений)</i><br />
  <%= f.password_field :current_password, class: "form-control" %></div>

  <div class="form-group"><%= f.submit "Обновить", class: "btn btn-primary" %></div>
<% end %>

<h4>Удаление аккаунта</h4>

<p><%= button_to "Удалить мой аккаунт", registration_path(resource_name), class: "btn btn-danger" , :data => { :confirm => "Вы уверены?" }, :method => :delete %></p>

<%= link_to "Назад", :back %>
