<h3>Войти</h3>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-group"><%= f.label "Адрес электронной почты" %><br />
  <%= f.email_field :email, :autofocus => true, class: "form-control" %></div>

  <div class="form-group"><%= f.label "Пароль" %><br />
  <%= f.password_field :password, class: "form-control" %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group"><%= f.check_box :remember_me %> <%= f.label "Запомнить меня" %></div>
  <% end -%>

  <div><%= f.submit "Войти", class: "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
